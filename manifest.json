{
	"name": "Javascript Scratchpad",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Javascript Scratchpad for Chrome",
	"app": {
		"background": {
			"scripts": [
				"js/launch.js",
				"js/background.js"
			],
			"persistent": false
		}
	},
	"sandbox": {
		"pages": [
			"sandbox.html"
		]
	},
	"commands": {
		"launch-scratchpad": {
			"suggested_key": {
				"default": "Ctrl+Shift+E"
			},
			"description": "Lauch a new JavaScript Scratchpad"
		}
	},
	"permissions": [
		"fileSystem",
		"fileSystem.write"
	],
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png"
	}
}