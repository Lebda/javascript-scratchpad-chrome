{
	"name": "Javascript Scratchpad",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Javascript Scratchpad for Chrome",
	/*"browser_action": {
		"default_icon": "img/icon-19.png"
	},*/
	"app": {
		"background": {
			"scripts": [
				"js/launch.js",
				"js/background.js"
			],
			"persistent": false
		}
		/*"launch": {
			"local_path": "scratchpad.html",
			"container": "panel",
			"width": 960,
			"height": 600
		}*/
	},
	"sandbox": {
		"pages": [
			"sandbox.html",
			"js/scratchpad_worker.js"
		]
		/*"scripts": ["js/sandbox.js"]*/
	},
	"commands": {
		"launch-scratchpad": {
			"suggested_key": {
				"default": "Ctrl+Shift+E"
			},
			"description": "Lauch a new JavaScript Scratchpad"
		}
	},
	"permissions": [
		"fileSystem",
		"fileSystem.write"
	],
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png"
	}//,
	//"offline_enabled": true,
	//"content_security_policy": "default-src 'self' 'unsafe-eval'; object-src 'self'"
}